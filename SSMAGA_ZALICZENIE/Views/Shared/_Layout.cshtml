<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mazuria Czarter</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://kit.fontawesome.com/6a79ad2330.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/czarter.css" />
    <link href="~/css/vanilla-calendar.min.css" rel="stylesheet">
    <script src="~/js/vanilla-calendar.min.js"></script>
</head>
<body>
    <div class="box">
        <header>
            <img src="~/img/logo.png" alt="" width="80" height="80" /><h1>Mazuria</h1>
            <div class="menu">
                <ul>
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">HOME</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Onas">O NAS</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Oferta">OFERTA</a></li>
                    <li><a href="link">KONTAKT</a></li>
                </ul>
            </div>
        </header>

        <div class="kontener">
            @RenderBody()
        </div>

        <footer class="stopka">
        STOPKA
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>